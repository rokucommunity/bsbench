@suite()
@only()
namespace FilterArray
    @test("small(10): new array - remove 10%")
    sub _()
        array = []
        for i = 0 to 10
            array.push(i mod 10)
        end for

        result = []
        for each item in array
            if item = 0
                result.push(item)
            end if
        end for
    end sub

    @test("small(10): new array - remove 50%")
    sub _()
        array = []
        for i = 0 to 10
            array.push(i mod 2)
        end for

        result = []
        for each item in array
            if item = 0
