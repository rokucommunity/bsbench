        end for
    end sub

    @test("small(10): new array - remove 90%")
    sub _()
        array = []
        for i = 0 to 10
            array.push(i mod 10)
        end for

        result = []
        for each item in array
            if item > 0
                result.push(item)
            end if
        end for
    end sub


    @test("small(10): delete - remove 10%")
    sub _()
        array = []
        for i = 0 to 10
            array.push(i mod 10)
        end for

        for i = array.count() - 1 to 0 step -1
            if array[i] = 0 then
                array.delete(i)
            end if
        next
    end sub

