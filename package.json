{
  "name": "bsbench",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "ropm copy",
    "benchmark": "ts-node scripts/src/cli.ts",
    "build": "bsc",
    "package": "roku-deploy zip --stagingDir ./dist --outDir ./out --outFile bsbench.zip",
    "build-complib": "roku-deploy zip --stagingDir ./complib --outDir ./dist/componentLibraries --outFile complib.zip",
    "test": "nyc mocha",
    "test:nocover": "mocha"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "ropm": {
    "rootDir": "src"
  },
  "dependencies": {
    "@rokucommunity/logger": "^0.3.9",
    "@rokucommunity/promises": "^0.2.0",
    "dayjs": "^1.11.12",
    "dotenv": "^16.4.5",
    "eventemitter3": "^5.0.1",
    "source-map": "^0.7.4",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^5.2.5",
    "@types/yargs": "^15.0.5",
    "brighterscript": "file:../brighterscript0__v1",
    "brighterscript-formatter": "^1.7.4",
    "chai": "^4.2.0",
    "fs-extra": "^11.2.0",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "roku-deploy": "^4.0.0-alpha.1",
    "ropm": "^0.10.23",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "undent": "^0.1.0",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "mocha": {
    "spec": "scripts/src/**/*.spec.ts",
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ],
    "fullTrace": true,
    "timeout": 2000,
    "watchExtensions": [
      "ts"
    ]
  },
  "nyc": {
    "include": [
      "scripts/src/**/*.ts",
      "!scripts/src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  }
}
